<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="12dp"
    android:paddingEnd="10dp"
    android:paddingTop="70dp"
    android:paddingBottom="10dp"
    tools:context="com.example.thor.modus.FoodItemViewFragment"
    android:id="@+id/relativeLayout">


    <ImageView
        android:id="@+id/foodItemDetailImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="61dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/foodItemDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/foodItemDetailWeight"
        android:layout_below="@+id/foodItemDetailImg"
        android:ellipsize="end"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:text="Item Name"
        android:textAlignment="viewStart"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/foodItemDetailWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodItemDetailTitle"
        android:layout_toEndOf="@+id/textView7"
        android:ellipsize="end"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:singleLine="true"
        android:text="this is weight" />

    <TextView
        android:id="@+id/foodItemDetailDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:ems="10"
        android:inputType="date"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:text="this is date" />

    <Button
        android:id="@+id/editFoodItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/foodItemDetailImg"
        android:layout_marginBottom="33dp"
        android:text="@string/editButton" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/foodItemDetailWeight"
        android:layout_alignParentStart="true"
        android:text="Quantity: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/foodItemDetailWeight"
        android:layout_alignParentStart="true"
        android:text="Title: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/foodItemDetailImg"
        android:layout_below="@+id/foodItemDetailWeight"
        android:layout_marginTop="13dp"
        android:text="Expires By: "
        android:textSize="18sp" />


</RelativeLayout>
