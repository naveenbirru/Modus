<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:paddingStart="12dp"
    android:paddingEnd="10dp"
    android:paddingTop="70dp"
    android:paddingBottom="10dp"
    tools:context="com.example.thor.modus.FoodItemEditFragment"
    android:id="@+id/relativeLayout">

    <ImageButton
        android:id="@+id/foodItemEditImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="61dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/foodItemEditTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/foodItemEditImg"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:text="Item Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/foodItemEditWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/foodItemEditTitle"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="this is weight" />

    <EditText
        android:id="@+id/foodItemEditDate"
        android:layout_width="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/foodItemEditWeight"
        android:ems="10"
        android:inputType="date"
        android:text="this is date" />

    <Button
        android:id="@+id/saveFoodItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/foodItemEditImg"
        android:layout_marginBottom="33dp"
        android:text="@string/saveButton" />



</RelativeLayout>
