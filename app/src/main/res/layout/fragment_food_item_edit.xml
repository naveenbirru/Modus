<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:paddingStart="12dp"
    android:paddingEnd="10dp"
    android:paddingTop="70dp"
    android:paddingBottom="10dp"

    tools:context="com.example.thor.modus.FoodItemEditFragment"
    android:id="@+id/relativeLayout">

    <ImageButton
        android:id="@+id/foodItemEditImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView4"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/foodItemEditTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodItemEditImg"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView4"
        android:ellipsize="end"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:text="Item Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/foodItemEditWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/foodItemEditTitle"
        android:layout_below="@+id/foodItemEditTitle"
        android:ellipsize="end"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:singleLine="true"
        android:text="this is weight" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/foodItemEditWeight"
        android:layout_alignBottom="@+id/foodItemEditWeight"
        android:layout_alignParentStart="true"
        android:paddingLeft="15dp"
        android:text="Quantity: "
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/foodItemEditTitle"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:text="Select to change Category: "
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/foodItemEditTitle"
        android:layout_alignBottom="@+id/foodItemEditTitle"
        android:paddingLeft="15dp"
        android:text="Title: "
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/foodItemEditDate"
        android:layout_alignBottom="@+id/foodItemEditDate"
        android:layout_alignParentStart="true"
        android:paddingLeft="15dp"
        android:text="Expires By: "
        android:textSize="18dp" />

    <EditText
        android:id="@+id/foodItemEditDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/foodItemEditWeight"
        android:layout_below="@+id/foodItemEditWeight"
        android:ems="10"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:clickable="true"
        android:text="this is date" />

    <Button
        android:id="@+id/saveFoodItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="33dp"
        android:text="@string/saveButton" />

</RelativeLayout>
